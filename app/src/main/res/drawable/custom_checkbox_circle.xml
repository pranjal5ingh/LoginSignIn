<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#3F51B5" />
        </shape>
    </item>

    <!-- Unchecked -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#3F51B5" />
        </shape>
    </item>
</selector>
